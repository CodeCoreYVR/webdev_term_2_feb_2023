<%- include("../partials/header.ejs") %>

    <div class="card mt-4">
        <div class="card-header">
            <%= title %>
                <div>
                    <%= created_at %>
                </div>
        </div>
        <div class="card-body">
            <div>
                <img src="<%= image_url %>" class="img-thumbnail img-fluid" alt="Image of Post" />
            </div>
            <p class="card-text">
                <%= content %>
            </p>            
        </div>
        <div class="card-footer">
            <a class="btn btn-warning float-end" href="/posts/<%= id %>/edit">Edit Post</a>
            <!-- html browser form does not support DELETE, PATCH, PUT -->
            <form class="float-start" action="/posts/<%= id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="btn btn-danger" value="Delete Post"/>
            </form>
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>