<%- include("../partials/header.ejs")  %>

<h1>New Posts</h1>

<form action="/posts" method="post">
    <div class="form-group">
        <input type="text" class="form-control" name="title" placeholder="What is your post about?"/>
      </div>
      <div></div>
      <div class="form-group">
        <input type="url" class="form-control" name="image_url" placeholder="e.g. http://image.com/myPic.png"/>
      </div>
      <div></div>
      <div class="form-group">
        <textarea name="content" placeholder="What are your thoughts?" cols="30" rows="10" ></textarea>
      </div>
      <div></div>
      <input type="submit" value="Create post" class="btn btn-outline-success">
</form>

