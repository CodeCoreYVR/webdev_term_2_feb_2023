<%- include('../partials/header') %>

  <div class="container mt-5 card-custom" style="margin:auto;max-width: 400px;">
    <h1 class="text-center">Notes List</h1>
    <hr>
    <a href="/todo/new">Add New Reminder</a>
    <div class="row mt-4">
      <% if (todoList.length) { %>
        <% todoList.forEach((reminder, index) => { %>
          <div class="col-12 mb-4">
            <div class="card">
              <div class="card-body">
                <p class="card-title"><a href="/todo/<%= index %>/show"><%= reminder.title %></a></p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-sm-12">
          <p>No reminders found...</p>
        </div>
      <% } %>
    </div>
  </div>

<%- include('../partials/footer') %>