<div class="text-center">
  <h1>Contact Us</h1>
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field(:title, class: "form-control text-field-wrap") %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field(:description, class: "form-control text-field-wrap") %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field(:price, class: "form-control text-field-wrap") %>
    </div>
  
    <%= f.submit("Send", class: "btn btn-primary") %>
  <% end %>
</div>