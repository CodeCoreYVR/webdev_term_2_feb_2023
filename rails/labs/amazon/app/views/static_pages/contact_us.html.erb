<% if @message %>
  <p><%= @message %></p>
<% else %>
  <h1>Contact Us</h1>
  <%= form_tag contact_us_path, method: :post, data: { turbo: false } do %>
    <p>
      <%= label_tag(:name, "Name:") %><br>
      <%= text_field_tag(:name) %>
    </p>

    <p>
      <%= label_tag(:email, "Email:") %><br>
      <%= email_field_tag(:email) %>
    </p>

    <p>
      <%= label_tag(:body, "Body:") %><br>
      <%= text_area_tag(:body) %>
    </p>

    <%= submit_tag("Send") %>
  <% end %>
<% end %>